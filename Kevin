		<script>
			function non(){
			
                 var num1 = document.getElementById("firstnumber").value;
                 var num2 = document.getElementById("secondnumber").value;
                 var num3 = document.getElementById("thirdnumber").value;
                 var num4 = document.getElementById("fourthnumber").value;
                 
            
            average = (parseInt(num1) + parseInt(num2) + parseInt(num3) + parseInt(num4)) / 4;
            if (average >= 75){
            	alert("Your Grade is: " + average + "\n Congratulations! You Passed");
            }
            else if(average < 75){
            	alert("Your Grade is: " + average + "\n Sorry, You Failed");
            }else{
            	alert("ERROR!")
            }
 			}
    </script>
<body onload>
